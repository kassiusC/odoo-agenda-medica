<odoo>
    <!-- Vista calendario Agendamientos -->
    <record id="vista_calendar_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.calendar</field>
        <field name="model">mi.agendamiento</field>
        <field name="arch" type="xml">
            <calendar string="Agendamientos" date_start="fecha" color="estado">
                <field name="titulo"/>
                <field name="persona_id"/>
                <field name="estado"/>
                <field name="medico_id"/>
            </calendar>
        </field>
    </record>

    <!-- Vista formulario Agendamientos -->
    <record id="vista_form_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.form</field>
        <field name="model">mi.agendamiento</field>
        <field name="arch" type="xml">
            <form string="Agendamiento">
                <header>
                    <div class="flex-grow-1"/>

                    <button name="action_confirmar" type="object" string="Confirmar Cita" class="btn-primary oe_highlight" invisible="not id or estado != 'pendiente'"/>

                    <button name="action_cancelar" type="object" string="Cancelar Cita" class="btn-danger" invisible="not id or not (estado in ['pendiente','confirmado'])"/>

                    <button name="action_enviar_recordatorio" type="object" string="Enviar recordatorio" class="btn-info" invisible="not id or estado != 'pendiente'"/>
                </header>
                <sheet>
                    <group>
                        <field name="titulo"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="persona_id"/>
                        <field name="medico_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista Agendamientos (inline reducida, prioridad baja) -->
    <record id="vista_list_agendamiento_inline" model="ir.ui.view">
        <field name="name">mi.agendamiento.list.inline</field>
        <field name="model">mi.agendamiento</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Agendamientos">
                <field name="titulo"/>
                <field name="fecha"/>
            </list>
        </field>
    </record>

    <!-- Vista lista Agendamientos (completa, prioridad más alta) -->
    <record id="vista_list_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.list</field>
        <field name="model">mi.agendamiento</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <list string="Agendamientos">
                <field name="titulo"/>
                <field name="fecha"/>
                <field name="estado" widget="statusbar"/>
                <field name="persona_id"/>
                <field name="medico_id"/>
            </list>
        </field>
    </record>

    <!-- Acción Agendamientos con calendario como vista inicial y lista completa -->
    <record id="action_agendamiento" model="ir.actions.act_window">
        <field name="name">Agendamientos</field>
        <field name="res_model">mi.agendamiento</field>
        <field name="view_mode">kanban,calendar,form,list</field>
        <field name="view_id" ref="vista_calendar_agendamiento"/>
        <field name="views">[(ref('vista_calendar_agendamiento'),'calendar'),
                             (ref('vista_form_agendamiento'),'form'),
                             (ref('vista_list_agendamiento'),'list')]</field>
    </record>

    <!-- Acción Personas -->
    <record id="action_persona" model="ir.actions.act_window">
        <field name="name">Personas</field>
        <field name="res_model">mi.persona</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción para abrir médicos -->
    <record id="action_medico" model="ir.actions.act_window">
        <field name="name">Medicos</field>
        <field name="res_model">mi.medico</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista formulario Personas -->
    <record id="vista_form_persona" model="ir.ui.view">
        <field name="name">mi.persona.form</field>
        <field name="model">mi.persona</field>
        <field name="arch" type="xml">
            <form string="Persona">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="telefono"/>
                        <field name="enviar_email"/>
                        <field name="email" invisible="not enviar_email"/>
                        <field name="activo"/>
                    </group>
                    <notebook>
                        <page string="Agendamientos">
                            <!-- Inline usa la vista reducida por prioridad -->
                            <field name="agendamiento_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista Personas -->
    <record id="vista_list_persona" model="ir.ui.view">
        <field name="name">mi.persona.list</field>
        <field name="model">mi.persona</field>
        <field name="arch" type="xml">
            <list string="Personas">
                <field name="nombre"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <!-- Vista kanban Agendamientos sin orden forzado -->
    <record id="vista_kanban_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.kanban</field>
        <field name="model">mi.agendamiento</field>
        <field name="arch" type="xml">
            <kanban default_group_by="estado" class="o_kanban_small_column">
                <field name="titulo"/>
                <field name="fecha"/>
                <field name="estado"/>
                <field name="persona_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" t-att-class="record.estado.raw_value == 'pendiente' and 'bg-warning' or
                                        record.estado.raw_value == 'confirmado' and 'bg-success text-white' or
                                        record.estado.raw_value == 'cancelado' and 'bg-danger text-white' or ''">
                            <div class="o_kanban_primary">
                                <strong>
                                    <field name="titulo"/>
                                </strong>
                            </div>
                            <div class="o_kanban_secondary">
                                <span>
                                    <field name="fecha"/>
                                </span>
                                <br/>
                                <span>
                                    <field name="persona_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_footer">
                                <span class="badge">
                                    <field name="estado"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista lista -->
    <record id="view_tree_medico" model="ir.ui.view">
        <field name="name">mi.medico.tree</field>
        <field name="model">mi.medico</field>
        <field name="arch" type="xml">
            <list string="Médicos">
                <field name="nombre"/>
                <field name="especialidad"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="activo"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_form_medico" model="ir.ui.view">
        <field name="name">mi.medico.form</field>
        <field name="model">mi.medico</field>
        <field name="arch" type="xml">
            <form string="Médico">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="especialidad"/>
                        <field name="telefono"/>
                        <field name="email"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista gráfica de agendamientos -->
    <record id="vista_graph_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.graph</field>
        <field name="model">mi.agendamiento</field>
        <field name="arch" type="xml">
            <graph string="Estadísticas de Agendamientos" type="bar">
                <field name="fecha" type="row"/>
                <field name="medico_id" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista pivot de agendamientos -->
    <record id="vista_pivot_agendamiento" model="ir.ui.view">
        <field name="name">mi.agendamiento.pivot</field>
        <field name="model">mi.agendamiento</field>
        <field name="arch" type="xml">
            <pivot string="Agendamientos por Especialidad y Estado">
                <field name="estado" type="col"/>
                <field name="id" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Acción Dashboard -->
    <record id="action_agendamiento_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard de Agendamientos</field>
        <field name="res_model">mi.agendamiento</field>
        <field name="view_mode">graph,pivot</field>
        <field name="views">[(ref('vista_graph_agendamiento'),'graph'),
                             (ref('vista_pivot_agendamiento'),'pivot')]</field>
    </record>




    <!-- Menú raíz Agenda (sin acción) -->
    <menuitem id="menu_agenda_root" name="Agenda"/>

    <!-- Submenú Personas -->
    <menuitem id="menu_persona" name="Personas" parent="menu_agenda_root" action="action_persona"/>

    <!-- Submenú Médicos -->
    <menuitem id="menu_medico" name="Medicos" parent="menu_agenda_root" action="action_medico"/>

    <!-- Menú Dashboard -->
    <menuitem id="menu_agendamiento_dashboard" name="Dashboard" parent="menu_agenda_root" action="action_agendamiento_dashboard"/>
</odoo>
